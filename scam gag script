-- üë§ –ê–≤–∞—Ç–∞—Ä –∏–≥—Ä–æ–∫–∞ –≤ –∫—Ä—É–≥–µ
local avatarFrame = Instance.new("ViewportFrame")
avatarFrame.Size = UDim2.fromOffset(100, 100)
avatarFrame.BackgroundTransparency = 1
avatarFrame.Name = "AvatarFrame"
avatarFrame.Parent = content

local mask = Instance.new("UICorner", avatarFrame)
mask.CornerRadius = UDim.new(1, 0)

avatarFrame.CurrentCamera = Instance.new("Camera", avatarFrame)

local function insertAvatar()
    local char = player.Character or player.CharacterAdded:Wait()
    local clone = char:Clone()
    for _, obj in clone:GetDescendants() do
        if obj:IsA("BasePart") then obj.Anchored = true end
    end
    clone.Parent = avatarFrame
end
insertAvatar()

-- üìù –ù–∏–∫
local usernameLabel = Instance.new("TextLabel")
usernameLabel.Text = player.DisplayName
usernameLabel.Font = Enum.Font.GothamBold
usernameLabel.TextSize = 18
usernameLabel.TextColor3 = COLORS.Text
usernameLabel.BackgroundTransparency = 1
usernameLabel.Size = UDim2.new(0, 220, 0, 24)
usernameLabel.Name = "UsernameLabel"
usernameLabel.Parent = content
