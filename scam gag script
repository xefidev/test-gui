--// Trade Freez GAG UI — by Казак
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "TradeGAG"
screenGui.ResetOnSpawn = false

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
frame.BorderSizePixel = 0

-- RGB Neon Border
local uiStroke = Instance.new("UIStroke", frame)
uiStroke.Thickness = 2
uiStroke.Color = Color3.fromRGB(255, 0, 100)
uiStroke.Transparency = 0
uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

-- Glossy Effect
local uiGradient = Instance.new("UIGradient", frame)
uiGradient.Rotation = 90
uiGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 100)),
    ColorSequenceKeypoint.new(0.5, Color3.fromRGB(50, 50, 50)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 200))
}

-- Close button ✕
local close = Instance.new("TextButton", frame)
close.Size = UDim2.new(0, 40, 0, 40)
close.Position = UDim2.new(1, -45, 0, 5)
close.Text = "✕"
close.TextColor3 = Color3.fromRGB(255, 255, 255)
close.BackgroundTransparency = 1
close.MouseEnter:Connect(function() close.TextColor3 = Color3.fromRGB(255, 0, 100) end)
close.MouseLeave:Connect(function() close.TextColor3 = Color3.fromRGB(255, 255, 255) end)
close.MouseButton1Click:Connect(function() screenGui:Destroy() end)

-- Player Avatar + Name
local thumbnail = Instance.new("ImageLabel", frame)
thumbnail.Size = UDim2.new(0, 80, 0, 80)
thumbnail.Position = UDim2.new(0, 20, 0, 20)
thumbnail.BackgroundTransparency = 1
thumbnail.Image = "https://www.roblox.com/headshot-thumbnail/image?userId="..player.UserId.."&width=420&height=420&format=png"

local nameLabel = Instance.new("TextLabel", frame)
nameLabel.Size = UDim2.new(0, 200, 0, 50)
nameLabel.Position = UDim2.new(0, 110, 0, 35)
nameLabel.BackgroundTransparency = 1
nameLabel.Text = player.Name
nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
nameLabel.TextScaled = true
nameLabel.Font = Enum.Font.GothamBold

-- Optional: Add custom banner
-- local banner = Instance.new("TextLabel", frame)
-- banner.Text = "Created by Казак"
-- banner.Position = UDim2.new(0, 0, 1, -25)

-- Final polish
local uiCorner = Instance.new("UICorner", frame)
uiCorner.CornerRadius = UDim.new(0, 8)

